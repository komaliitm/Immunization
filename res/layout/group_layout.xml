<LinearLayout android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent" android:layout_height="45dip"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/darkblue_gradient"
        android:orientation="horizontal"
        >
        <ImageView android:id="@+id/ImageView01" android:src="@drawable/ic_action_search"
                android:layout_height="40dip" android:layout_width="40dip" android:layout_marginLeft="40dip"></ImageView>
        <TextView android:id="@+id/tvGroup" 
            android:layout_width="160dp"
                android:layout_height="35dip" 
                android:text="Search Options"
                 android:gravity="center_vertical|left"
                 android:layout_gravity="center"
                android:paddingLeft="5dip" android:paddingRight="5dip"
                android:textColor="#ffffffff" android:textStyle="bold"
                android:textSize="20dip"></TextView>
        
</LinearLayout>