<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="40dip"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/sky_blue_color">
	<ImageView android:id="@+id/ImageView01" android:src="@drawable/ic_action_user"
		android:layout_height="40dip" android:layout_width="40dip" android:layout_marginLeft="20dip"></ImageView>
	<EditText android:id="@+id/editText1"  
	    android:layout_width="fill_parent"
		android:layout_height="30dip" 
		 
		android:textColor="@color/dark_grey_color"
		android:gravity="center_vertical|left"
		android:paddingLeft="15dip" android:paddingRight="5dip"

	
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:textColorHint="@color/light_grey_color" 
		   android:layout_gravity="center"
		android:background="@drawable/white_gradient"
		
		android:textSize="17sp"></EditText>
</LinearLayout>