<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.social.healthometer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.social.healthometer.SplashScreen"
            android:label="@string/app_name" 
              android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.social.healthometer.ChooseLanguageActivity"
            android:label="@string/app_name" >
           
        </activity>
        <activity
            android:name="com.social.healthometer.MainMenuActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.social.healthometer.SettingsActivity"
            android:label="@string/action_settings" >
        </activity>
        <activity
            android:name="com.social.healthometer.AddDetailsActivity"
            android:label="@string/add_details" >
        </activity>
        <activity
            android:name="com.social.healthometer.VerificationActivity"
            android:label="@string/verification" >
        </activity>
        <activity
            android:name="com.social.healthometer.ViewDetailFragment"
            android:label="@string/search" >
        </activity>
        <activity
            android:name="com.social.healthometer.UpdateDeleteActivity"
            android:label="@string/title_activity_update_delete" >
        </activity>
        
    </application>

</manifest>
